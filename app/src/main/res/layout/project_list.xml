<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/project_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/project_image"
            android:adjustViewBounds="true" android:scaleType="fitXY"
            android:layout_weight="2" android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" android:layout_marginRight="4dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="8" android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" android:gravity="center|start">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="행사이름"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/competition" app:layout_constraintStart_toEndOf="@+id/project_image"
                    android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/name"
                    android:textSize="14sp"
                    android:fontFamily="@font/main_font" android:padding="2dp"/>
            <TextView
                    android:text="상"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prize" app:layout_constraintStart_toEndOf="@+id/name"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="12sp"
                    android:fontFamily="@font/main_font" android:padding="2dp"/>
        </LinearLayout>
        <TextView
                android:text="프로젝트 이름"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/name"
                app:layout_constraintStart_toEndOf="@+id/project_image" android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="12sp"
                android:fontFamily="@font/main_font" android:padding="2dp"/>
    </LinearLayout>
</LinearLayout>